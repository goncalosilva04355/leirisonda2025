{
  "name": "leirisonda-production",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "homepage": ".",
  "description": "Leirisonda - Sistema de Gestão de Obras e Manutenções (Produção)",
  "pkg": {
    "assets": ["dist-production/spa/*"],
    "scripts": ["dist-production/server/**/*.js"]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "build:prod": "NODE_ENV=production vite build --mode production --outDir dist-production",
    "build:client": "vite build --mode production",
    "preview": "vite preview --port 4173",
    "preview:prod": "vite preview --port 4173 --outDir dist-production",
    "start": "node dist-production/server/node-build.mjs",
    "start:prod": "NODE_ENV=production node dist-production/server/node-build.mjs",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "format.fix": "prettier --write .",
    "deploy:netlify": "npm run build:prod && netlify deploy --prod --dir=dist-production",
    "deploy:vercel": "npm run build:prod && vercel --prod",
    "deploy:firebase": "npm run build:prod && firebase deploy",
    "firebase:update": "node scripts/update-firebase-config.js",
    "capacitor:sync": "npx cap sync",
    "capacitor:ios": "npx cap open ios",
    "capacitor:android": "npx cap open android",
    "mobile:build": "npm run build:prod && npx cap sync"
  },
